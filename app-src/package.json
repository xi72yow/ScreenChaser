  "scripts": {
    "clean": "rimraf electron-dist bundler-dist",
    "dev": "tsc-watch -p electron-src --onSuccess \"electron electron-dist\"",
    "dev-manuell": "pnpm run build-electron && electron ./electron-dist",
    "build-renderer": "vite build bundler-src",
    "build-electron": "tsc -p electron-src",
    "build-steps": "pnpm run build-renderer && pnpm run build-electron",
    "pack-app": "pnpm run build-steps && electron-builder --dir",
    "build": "pnpm run build-steps && electron-builder",
    "type-check": "tsc -p ./next-src/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "test:dns-sd": "ts-node ./electron-src/dns-service-discovery/dns-sd.test.ts"
  },
  "devDependencies": {
    "@types/node": "20.11.19",
    "@types/w3c-image-capture": "1.0.10",
    "electron": "31.1.0",
    "electron-builder": "24.13.3",
    "rimraf": "3.0.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vite": "5.2.10",
    "tsc-watch": "6.2.0"
  }
}
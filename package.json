{
  "name": "screenchaser",
  "productName": "ScreenChaser",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:app": "lerna --scope screenchaser-app run dev",
    "dev:core": "lerna run dev --scope screenchaser-core",
    "build:app": "lerna run build --scope screenchaser-app",
    "dist:app": "lerna run dist --scope screenchaser-app",
    "build:core": "lerna run build --scope screenchaser-core",
    "build:core-as": "lerna run asbuild:debug --scope screenchaser-core",
    "build:firmware": "lerna run build --scope screenchaser-firmware",
    "guard:app": "lerna run guard --scope screenchaser-app",
    "release": "lerna version --conventional-commits",
    "nuke": "lerna run clean && pnpm store prune && lerna clean -y"
  },
  "devDependencies": {
    "release-please": "15.12.0"
  }
}
{
  "name": "screenchaser",
  "productName": "ScreenChaser",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:app": "lerna run dev --scope screenchaser-app",
    "dev:core": "lerna run dev --scope screenchaser-core",
    "build:app": "lerna run build --scope screenchaser-app",
    "build:core": "lerna run build --scope screenchaser-core",
    "build:firmware": "lerna run build --scope screenchaser-firmware",
    "flash:firmware": "lerna run flash --scope screenchaser-firmware",
    "monitor:firmware": "lerna run monitor --scope screenchaser-firmware",
    "guard:app": "lerna run guard --scope screenchaser-app",
    "release": "lerna version --conventional-commits"
  },
  "workspaces": {
    "packages": [
      "app-src/",
      "cli-src/",
      "core-src/",
      "firmware-src/"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/electron",
      "**/electron/**",
      "**/jest",
      "**/jest/**",
      "**/screenchaser-app",
      "**/screenchaser-app/**",
      "**/screenchaser-cli/**",
      "**/screenchaser-cli",
      "**/screenchaser-firmware/**",
      "**/screenchaser-firmware",
      "**/ts-node",
      "**/ts-node/**"
    ]
  },
  "devDependencies": {
    "lerna": "^6.1.0"
  }
}
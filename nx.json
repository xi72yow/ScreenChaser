{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": [
                    "build",
                    "test"
                ],
                "parallel": 5
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": [
                {
                    "projects": "dependencies",
                    "target": "build"
                },
                {
                    "target": "guard",
                    "projects": "self"
                },
                {
                    "target": "clean",
                    "projects": "self"
                }
            ]
        },
        "dev": {
            "dependsOn": [
                {
                    "projects": "dependencies",
                    "target": "build"
                },
                {
                    "target": "guard",
                    "projects": "self"
                }
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ]
        }
    }
}